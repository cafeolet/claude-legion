{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/session-init.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "centurion",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "A Centurion implementation agent just completed its task. If Vigil verification has NOT already been requested for this Centurion's work, spawn Vigil now to verify the implementation before reporting results to the user. If Vigil is already running or has already verified this work, skip. Respond with JSON: {\"ok\": true, \"reason\": \"[Legion] Centurion complete â€” spawning Vigil for verification.\"}"
          }
        ]
      },
      {
        "matcher": "vigil",
        "hooks": [
          {
            "type": "command",
            "command": "mkdir -p .legion && touch .legion/vigil-ran"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/track-changes.sh",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/stop-check.sh"
          }
        ]
      }
    ]
  }
}
